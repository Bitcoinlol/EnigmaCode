{
  "name": "enigmacode-platform",
  "version": "1.0.0",
  "description": "Complete software licensing and obfuscation platform",
  "main": "backend/server.js",
  "keywords": ["licensing", "obfuscation", "lua", "security"],
  "author": "EnigmaCode Team",
  "license": "MIT",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance.test.js",
    "benchmark": "node scripts/benchmark.js",
    "load-test": "node scripts/load-test.js",
    "load-test:light": "node scripts/load-test.js 10 30 5",
    "load-test:heavy": "node scripts/load-test.js 100 120 20",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/node_modules/**",
      "!backend/coverage/**"
    ]
  }
}
